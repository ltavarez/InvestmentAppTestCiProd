@model ResetPasswordRequestViewModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "_LayoutAnonymous";
}

<div class="col-12 col-md-6 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-light"><h5 class="text-center">Reset password</h5></div>
        <div class="card-body">
            @if (ViewBag.HasError != null && ViewBag.HasError)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @foreach (var error in ViewBag.Errors)
                    {
                        <p class="text-danger">@error</p>
                    }
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            }
            <form asp-controller="Login" asp-action="ResetPassword" method="POST">
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password:</label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm password:</label>
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Id" />
               
                <div>
                    <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Save</button>
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-warning float-end me-2"><i class="bi bi-arrow-left-short"></i> Back to login</a>
                </div>
            </form>
        </div>
    </div>
</div>
